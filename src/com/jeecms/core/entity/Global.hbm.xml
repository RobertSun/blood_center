<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.core.entity">
	<class
		name="Global"
		table="CORE_GLOBAL"
	>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Long"
			column="GLOBAL_ID"
		>
			<generator class="native"/>
		</id>

		<property
			name="contextPath"
			column="CONTEXT_PATH"
			type="string"
			not-null="true"
			length="20"
		/>
		<property
			name="port"
			column="PORT"
			type="integer"
			not-null="true"
			length="10"
		/>
	</class>	
</hibernate-mapping>